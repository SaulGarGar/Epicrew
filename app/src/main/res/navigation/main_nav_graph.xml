<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.saulgargar.epicrew.presentation.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_nameFinderFragment"
            app:destination="@id/nameFinderFragment" />
    </fragment>
    <fragment
        android:id="@+id/expertFinderFragment"
        android:name="com.saulgargar.epicrew.presentation.fragment.ExpertFinderFragment"
        android:label="fragment_expert_finder"
        tools:layout="@layout/fragment_expert_finder" />
    <fragment
        android:id="@+id/nameFinderFragment"
        android:name="com.saulgargar.epicrew.presentation.fragment.NameFinderFragment"
        android:label="fragment_name_finder"
        tools:layout="@layout/fragment_name_finder" />
</navigation>