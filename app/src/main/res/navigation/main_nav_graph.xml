<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.saulgargar.epicrew.presentation.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_nameFinderFragment"
            app:destination="@id/nameFinderFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/expertFinderFragment"
        android:name="com.saulgargar.epicrew.presentation.fragment.ExpertFinderFragment"
        android:label="fragment_expert_finder"
        tools:layout="@layout/fragment_expert_finder" >
        <action
            android:id="@+id/action_expertFinderFragment_to_gnomeProfileFragment"
            app:destination="@id/gnomeProfileFragment"
            app:enterAnim="@anim/fragment_fade_enter" />
    </fragment>
    <fragment
        android:id="@+id/nameFinderFragment"
        android:name="com.saulgargar.epicrew.presentation.fragment.NameFinderFragment"
        android:label="fragment_name_finder"
        tools:layout="@layout/fragment_name_finder" >
        <action
            android:id="@+id/action_nameFinderFragment_to_gnomeProfileFragment"
            app:destination="@id/gnomeProfileFragment"
            app:enterAnim="@anim/fragment_fade_enter" />
    </fragment>
    <fragment
        android:id="@+id/creatureFinderResultsFragment"
        android:name="com.saulgargar.epicrew.presentation.fragment.CreatureFinderResultsFragment"
        android:label="fragment_creature_finder_results"
        tools:layout="@layout/fragment_creature_finder_results" >
        <action
            android:id="@+id/action_creatureFinderResultsFragment_to_gnomeProfileFragment"
            app:destination="@id/gnomeProfileFragment" />
        <argument
            android:name="physicalFeaturesQuery"
            app:argType="com.saulgargar.epicrew.presentation.model.PhysicalFeaturesQuery" />
    </fragment>
    <fragment
        android:id="@+id/gnomeProfileFragment"
        android:name="com.saulgargar.epicrew.presentation.fragment.GnomeProfileFragment"
        android:label="fragment_gnome_profile"
        tools:layout="@layout/fragment_gnome_profile" >
        <argument
            android:name="gnomeId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/creaturesFinderFragment"
        android:name="com.saulgargar.epicrew.presentation.fragment.CreaturesFinderFragment"
        android:label="fragment_creaures_finder"
        tools:layout="@layout/fragment_creatures_finder" >
        <action
            android:id="@+id/action_creauresFinderFragment_to_creatureFinderResultsFragment"
            app:destination="@id/creatureFinderResultsFragment" />
    </fragment>
</navigation>