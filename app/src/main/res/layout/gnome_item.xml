<com.google.android.material.card.MaterialCardView
    android:id="@+id/card"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:elevation="2dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pictureIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_armor"
            android:layout_margin="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTv"
                android:fontFamily="@font/caladea_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorPrimary"
                tools:text="Trugg Frenington"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/professionTv"
                android:fontFamily="@font/caladea_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/secondary_text"
                tools:text="Metalworker, Stonecarver"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
